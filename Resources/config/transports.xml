<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="tranchard_cron_monitor.transports.transport_factory"
                 class="Tranchard\CronMonitorBundle\Transports\TransportFactory">
            <argument type="tagged" tag="tranchard.cron_monitor.transport"/>
        </service>
        <service id="tranchard_cron_monitor.transports.drivers.filesystem"
                 class="Tranchard\CronMonitorBundle\Transports\Drivers\Filesystem">
            <tag name="tranchard.cron_monitor.transport"/>
        </service>
        <service id="tranchard_cron_monitor.transports.drivers.mailer"
                 class="Tranchard\CronMonitorBundle\Transports\Drivers\Mailer" autowire="true">
            <tag name="tranchard.cron_monitor.transport"/>
        </service>
    </services>

</container>
